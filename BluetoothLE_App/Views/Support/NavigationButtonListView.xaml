<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BluetoothLE_App.Views.Support.NavigationButtonListView"
             xmlns:model="clr-namespace:BluetoothLE_App.Models"
              x:Name="View">
    <ScrollView>
        <VerticalStackLayout
            BindableLayout.ItemsSource="{Binding Source={x:Reference View},
                                                 Path=ItemsSource}"
            Margin="10">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="model:NavigationButtonItem">

                    <Button BorderColor="{StaticResource Tertiary}"
                        Text="{Binding Name}"
                        Command="{Binding Source={x:Reference View},
                                          Path=Command}"
                        CommandParameter="{Binding Path}"
                        TextColor="{StaticResource White}"
                        Margin="0,10" />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
